/* 主内容 */
.wrapper {
    position: relative;
    overflow-x: hidden;
}
.now-position{
    height:50rpx;
    line-height:50rpx;    
    float:left;
}
.now-position text{
    font-size:28rpx;
    color:#888;
}
.main{
    padding:0 10rpx;
}
.con{
    padding:15rpx 20rpx;
    background:#fff;
    box-shadow: 0px 2px 7px 0px rgba(0,0,0,.2);
}
.con .sx-btn{
    width:110rpx;
    height: 50rpx;
    border-radius:8rpx;
    border:1px solid #a40000;
    line-height: 46rpx;
    padding-left:46rpx;
    background:url("data:image/png;base64,") no-repeat 12rpx center;
    background-size:28rpx;
    float:right;
    font-size:24rpx;
    color:#a40000;
}
.titleBox{
    margin-bottom:30rpx;
}